@page "{id:int}"
@model DrogueriaWeb.Pages.Productos.EditModel

<h2>Editar Producto</h2>

<form method="post">
    <label>Nombre</label><br />
    <input asp-for="Producto.Nombre" /><br />

    <label>Precio</label><br />
    <input asp-for="Producto.Precio" type="number" step="0.01" /><br />

    <label>Stock</label><br />
    <input asp-for="Producto.Stock" type="number" /><br />

    <button type="submit">Guardar Cambios</button>
</form>